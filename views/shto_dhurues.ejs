<!DOCTYPE html>
<html>

<head>
  <title>Dhuro gjak,shpëto jetë!</title>
  <link href="giveblood.png" rel="icon" type="image/gif">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="stylesheet" href="style/forms.css">
  <link rel="stylesheet" href="style/general.css">
  <link rel="stylesheet" href="style/navbar.css">
  <link rel="stylesheet" href="style/table.css">
  <link rel="shortcut icon" href="/img/giveblood.png">
</head>

<body>
  <nav>
    <div class="logo">
      <h4><img width="30" src="/img/giveblood.png" alt=""></h4>
    </div>
    <ul class="nav-links" id="nav-links">
      <li>
        <a href="/shto_dhurues">Dhuruesit</a>
      </li>
      <li>
        <a href="/shto_marres">Marrësit</a>
      </li>
      <li>
        <a href="/depozita">Depozita</a>
      </li>
      <li>
        <a style="color:red" href="/dil">dil</a>
      </li>
    </ul>

    <div class="burger">
      <div class="line1"></div>
      <div class="line2"></div>
      <div class="line3"></div>
    </div>
  </nav>

  <script src="/scripts/app.js"></script>


  <!-- Forma me shtu dhurues -->

  <div class="centerForm">
    <label class="mainLabel">Shto Dhurues </label>
    <div class="formBox marginTB ">
      <form method="POST" action="/shto_dhurues_form">
        <input type="text" name="shto_dhurues_emri" id="" placeholder="Emri">
        <input type="text" name="shto_dhurues_mbiemri" id="" placeholder="Mbiemri">

        <input type="number" name="shto_dhurues_kontakti" id="" placeholder="Kontakti" required>
        <input type="email" name="shto_dhurues_email" id="" placeholder="email" required>
        <select name="shto_dhurues_gr_gjakut" required>
          <option value="" disabled selected>Grupi i Gjakut</option>
          <option value="A-">A-</option>
          <option value="A+">A+</option>
          <option value="B-">B-</option>
          <option value="B+">B+</option>
          <option value="AB-">AB-</option>
          <option value="AB+">AB+</option>
          <option value="O+">0-</option>
          <option value="O+">0+</option>
        </select>

        <input type="text" name="shto_dhurues_sasia" placeholder="Sasia (ml)">

        <input type="submit" value="Shto Dhurues">
      </form>
      <p style="text-align: center; color : tomato;">
        <%- isAdded %>
      </p>
    </div>

    <div class="tableCenter">
      <table class="styled-table">
        <thead>
          <tr>
            <th scope="col ">Nr</th>
            <th scope="col">Emri</td>
            <th scope="col">Mbiemri</td>
            <th scope="col">Email</td>
            <th scope="col">Gr. i Gjakut</td>
            <th scope="col"> Kontakti</td>
            <th scope="col">Sasia</td>
          </tr>
        </thead>
        <tbody>
          <% for (var i=0; i < rows.length ; i++) { %>
            <tr>
              <th scope="row ">
                <%= i+1 %>
              </th>
              <td>
                <%= rows[i].emri %>
              </td>
              <td>
                <%= rows[i].mbiemri %>
              </td>
              <td>
                <%= rows[i].email %>
              </td>
              <td>
                <%= rows[i].grgjakut %>
              </td>
              <td>
                <%= rows[i].kontakti %>
              </td>
              <td>
                <%= rows[i].sasia %> ml
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
    <p style="text-align:center;">
      Totali i dhuruesve te gjakut : <%- totalRows %> <a href="/lista_dhuruesve">Shiko Me shume...</a>
    </p>
  </div>



  <!----------- Footer ------------>
  <%- include ('partials/footer.ejs') %>

</body>

</html>