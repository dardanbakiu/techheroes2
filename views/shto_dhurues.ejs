              name="shto_dhurues_email">
          </div>


          <!-- Forma e grupit te gjakut -->
          <label>Grupi i Gjakut</label>
          <div class="row">
            <div class="col-6">
              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="A-" id="aNegativ" name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="aNegativ">A-</label>
              </div>


              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="A+" id="aPozitiv" name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="aPozitiv">A+</label>
              </div>

              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="B-" id="bNegativ" name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="bNegativ">B-</label>
              </div>

              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="B+" id="bPozitiv" name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="bPozitiv">B+</label>
              </div>
            </div>
            <div class="col-6">
              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="AB-" id="abNegativ"
                  name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="abNegativ">AB-</label>
              </div>


              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="AB+" id="abPozitiv"
                  name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="abPozitiv">AB+</label>
              </div>

              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="O-" id="zeroNegativ"
                  name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="zeroNegativ">0-</label>
              </div>

              <div class="custom-control custom-radio">
                <input type="radio" class="custom-control-input" value="O+" id="zeroPozitiv"
                  name="shto_dhurues_gr_gjakut">
                <label class="custom-control-label" for="zeroPozitiv">0+</label>
              </div>

            </div>
          </div><br>
          <!-- / forma e grupit te gjakut -->

