  <div class="extraMarginTB">
    <div class="title center">
      <h2>Lista e dhuruesve të gjakut </h2>
    </div><br><br>
    <div class="container center">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col ">Nr</th>
            <th scope="col">Emri</td>
            <th scope="col">Mbiemri</td>
            <th scope="col">Email</td>
            <th scope="col">Gr. i Gjakut</td>
            <th scope="col"> Kontakti</td>
            <th scope="col">Sasia</td>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < rows.length ; i++) { %>
          <tr>
            <th scope="row "><%= i+1 %></th>
            <td><%= rows[i].emri %></td>
            <td><%= rows[i].mbiemri %></td>
            <td><%= rows[i].email %></td>
            <td><%= rows[i].grgjakut %></td>
            <td><%= rows[i].kontakti %></td>
            <td><%= rows[i].sasia %> ml</td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
  </div>






