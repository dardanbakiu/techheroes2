    <script>
      let titulli = document.getElementById('titulli').innerHTML
      titulli = titulli.split('')

      let teksti = ''
      let indeksi = 0


      setInterval(() => {

        if (indeksi < titulli.length) {
          console.log(teksti)
          document.getElementById('titulli').innerHTML = teksti
          teksti += titulli[indeksi]
          indeksi++
        }
      }, 100)


